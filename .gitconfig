[push]
	default = simple

[alias]
	wdiff = diff --color-words
	lg = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit
	caa = commit -a --amend -C HEAD

[color "diff"]
	meta = white bold
	frag = blue bold
	old = red bold
	new = green bold

[core]
	pager = less -F -X

[commit]
	gpgsign = true
[gpg]
	program = gpg
